{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["ES2022", "dom"],
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "app/*": ["./*"],
      "facade/*": ["./facade/*"],
      "components/*": ["./app/components/*"],
      "pages/*": ["./app/pages/*"],
    },
    "module": "Preserve",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
  },
  "exclude": ["dist", "webpack.config.js", "**/hide"]
}
