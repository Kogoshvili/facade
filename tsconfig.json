{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["ES2022", "dom"],
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "app/*": ["./*"],
      "facade/*": ["./facade/*"],
      "client/*": ["./app/client/*"],
      "server/*": ["./app/server/*"],
    },
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "module": "preserve",
    "target": "ES2022",
    "jsx": "react",
    "jsxFactory": "fElement",
    "jsxFragmentFactory": "fFragment",
  },
  "exclude": ["node_modules", "dist", "public", "patches"],
}
