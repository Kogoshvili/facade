{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "app/*": ["./*"],
      "facade/*": ["./facade/*"],
      "components/*": ["./app/components/*"],
      "pages/*": ["./app/pages/*"],
    },
    "experimentalDecorators": true,
    "target": "ES2022"
  },
  "exclude": ["node_modules", "dist", "webpack.config.js", "**/hide"]
}
